function tg-rmcache(){
    folder_name=$1
    find $folder_name -type d -name ".terragrunt-cache" -prune -exec rm -rf {} +
}

tg-st() {
    action=$1
    shift   # remove the first argument so $@ holds the rest

    case "$action" in
        ls)
        terragrunt state list "$@"
        ;;
        show)
        terragrunt state show "$@"
        ;;
        mv)
        terragrunt state mv "$@"
        ;;
        pull)
        terragrunt state pull "$@"
        ;;
        push)
        terragrunt state push "$@"
        ;;
        delete|rm)
        terragrunt state rm "$@"
        ;;
        *)
        echo "Unknown action: $action"
        echo "Valid actions: ls, show, mv, pull, push, delete"
        ;;
    esac
}

tg-ws() {
    action=$1
    shift   # remove the first argument so $@ holds the rest

    case "$action" in
        select|sel)
        terragrunt workspace select "$@"
        ;;
        show|sh)
        terragrunt workspace show "$@"
        ;;
        delete|rm)
        terragrunt workspace delete "$@"
        ;;
        list|ls)
        terragrunt workspace list "$@"
        ;;
        new|create)
        terragrunt workspace new "$@"
        ;;
        *)
        echo "Unknown action: $action"
        echo "Valid actions: select|sel, show|sh, delete|rm, list|ls, new|create"
        ;;
    esac
}

tg-ra(){
    terragrunt run-all apply --non-interactive \
    --queue-include-external \
    --working-dir .
}