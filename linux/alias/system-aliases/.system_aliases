###### GENERAL #######

alias ..='cd ..'
alias .1='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'

alias h='history'
alias h1='history 10'
alias h2='history 20'
alias h3='history 30'

alias psmem="ps auxf | sort -nr -k 4"
alias psmem10="ps auxf | sort -nr -k 4 | head -10"
alias pscpu="ps auxf | sort -nr -k 3"
alias pscpu10="ps auxf | sort -nr -k 3 | head -10"
alias cpuname='cat /proc/cpuinfo | grep "name"'

alias bashreload="source ~/.bashrc"
alias upgrade_udpate='apt-get update -y && apt-get upgrade -y'

# Network

alias localip="ifconfig | sed -En 's/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p'"
alias lisport='netstat -plantu | grep LISTEN'


# Systemd
alias sc='systemctl'
alias scs='systemctl status'
alias scls='systemctl list-units --type=service --state='
alias scrs='systemctl restart'
alias scst='systemctl stop'
alias scst='systemctl start'
alias scen='systemctl enable'
alias scd='systemctl disable'
alias scrl='systemctl reload'
alias scdr='systemctl daemon-reload'
alias scsh='systemctl show'
alias sce='systemctl edit'
alias scu='systemctl unmask'
alias scm='systemctl mask'

# Journalctl
alias jctl='journalctl'


###### ADVANCED FUNCTIONS #######
# Watch
wproc() {
    PID=$1
    INFO_TYPE=$2
    watch -n1 "cat /proc/$PID/$INFO_TYPE"
}

wls() {
    watch -n1 "ls -alh"
}

wdf() {
    watch -n1 "df -h"
}

wiostat() {
    # Add your command here, as it was not defined in your original code
}

wkgpo() {
    if [ -z "$1" ]; then
        watch -n1 "kubectl get pods"
    else
        NAMESPACE=$1
        watch -n1 "kubectl get pods -n $NAMESPACE"
    fi
}

wktno() {
    watch -n1 "kubectl top nodes"
}

wkgdep() {
    if [ -z "$1" ]; then
        watch -n1 "kubectl get deployment"
    else
        NAMESPACE=$1
        watch -n1 "kubectl get deployment -n $NAMESPACE"
    fi
}

wkgsts() {
    if [ -z "$1" ]; then
        watch -n1 "kubectl get statefulset"
    else
        NAMESPACE=$1
        watch -n1 "kubectl get statefulset -n $NAMESPACE"
    fi
}

wkgds() {
    if [ -z "$1" ]; then
        watch -n1 "kubectl get daemonset"
    else
        NAMESPACE=$1
        watch -n1 "kubectl get daemonset -n $NAMESPACE"
    fi
}

scfbs() {
    SERVICE_STATE=$1
    systemctl list-units --type=service --state=$SERVICE_STATE
}


# Linux
jctlsince() {
    SINCE_TIME=$1
    journalctl --since "$SINCE_TIME"
}

jctluntil() {
    UNTIL_TIME=$1
    journalctl --until "$UNTIL_TIME"
}

jctlrange() {
    SINCE_TIME=$1
    UNTIL_TIME=$2
    journalctl --since "$SINCE_TIME" --until "$UNTIL_TIME"
}
