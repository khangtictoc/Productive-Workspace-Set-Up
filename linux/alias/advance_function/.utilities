scfbs() {
    SERVICE_STATE=$1
    systemctl list-units --type=service --state=$SERVICE_STATE
}

# Kubernetes
kcvgurl() {
    CLUSTER_NAME=$1
    kubectl config view -o jsonpath='{.clusters[?(@.name == "'"$CLUSTER_NAME"'")].cluster.server}'
}

## Node
kgnos(){
    SELECTOR_LABEL=$1
    kubectl get nodes --selector="$SELECTOR_LABEL"
}

