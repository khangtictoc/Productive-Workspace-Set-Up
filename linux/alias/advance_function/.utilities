# Watch
wproc() {
    PID=$1
    INFO_TYPE=$2
    watch -n1 "cat /proc/$PID/$INFO_TYPE"
}

wls() {
    watch -n1 "ls -alh"
}

wdf() {
    watch -n1 "df -h"
}

