# Basic Docker Commands
alias dhelp='docker help'
alias dhis='docker history'

alias dcb='docker completion bash > ~/.docker_completion.sh && source ~/.docker_completion.sh'
alias dcz='docker completion zsh > ~/.docker_completion.sh && source ~/.docker_completion.sh'
alias dcf='docker completion fish > ~/.docker_completion.sh && source ~/.docker_completion.sh'
alias dcps='docker completion powershell > ~/.docker_completion.ps1 && source ~/.docker_completion.ps1'

alias d='docker'
alias db='docker build'
alias de='docker exec'
alias dl='docker ps -a'
alias dr='docker run'
alias dst='docker start'
alias dstop='docker stop'
alias drm='docker rm'
alias drmi='docker rmi'
alias dlog='docker logs'
alias di='docker inspect'
alias dver='docker version'
alias dinf='docker info'

alias dpull='docker pull'
alias dpush='docker push'
alias dtag='docker tag'
alias dcp='docker cp'

alias dnet='docker network'
alias dnetls='docker network ls'
alias dnetcr='docker network create'
alias dnetrm='docker network rm'

alias dvol='docker volume'
alias dvolls='docker volume ls'
alias dvolcr='docker volume create'
alias dvolrm='docker volume rm'

alias dimg='docker images'
alias dimgprune='docker image prune'
alias dcontprune='docker container prune'
alias dprune='docker system prune'

alias dattach='docker attach'
alias dcommit='docker commit'
alias dtop='docker top'
alias dst='docker stats'
alias dexp='docker export'
alias dimp='docker import'